.Form
    background background
    padding 2vw
    @media $screen-phone
        padding 24px
    max-height 100vh
    overflow-y auto
    box-sizing border-box

    &__success-message
        superheader()
        position absolute
        margin-top 1vw

    &__content
        transition filter 0.5s ease-out
        
    &_submitted
        .Form__content 
            filter blur(10px)
        
        // Keep left and right divs unblurred and in position
        .Form__left, .Form__right
            filter none
            position fixed
    
    &__item
        & + &
            margin-top 8px
            @media $screen-phone
                margin-top 16px

    &__close
        size = 20px
        height size
        background-size size
        width size
        background-position center center
        background-image url('/blocks/Form/i/close.svg')
        background-repeat no-repeat
        position relative
        position absolute
        right 2vw
        top 2vw
        display none
        @media $screen-phone
            display block
            margin-right 24px
            margin-top 24px

    &__logo
        size = 100%
        height 10vw
        background-size size
        width size
        background-position center center
        background-image url('/blocks/Form/i/byld-outline.svg')
        background-repeat no-repeat
        position relative
        margin-bottom 6vw
        @media $screen-phone
            margin-bottom 24px
            margin-top 48px

        @media $screen-phone
            height 23vw

    &__left, &__right
        margin-top 1vw
        background-repeat no-repeat
        position absolute
        background-position center center

    &__left
        size = 7vw
        height 10vw
        background-size size
        width size
        background-image url('/blocks/Form/i/left.svg')
        left 2vw

        @media $screen-phone
            size = 90px
            height 130px
            background-size size
            width size
            background-image url('/blocks/Form/i/left.svg')
            left 24px
        

    &__right
        size = 11vw
        height 10vw
        background-size size
        width size
        background-image url('/blocks/Form/i/right.svg')
        right 2vw

        @media $screen-phone
            size = 140px
            height 130px
            background-size size
            width size
            background-image url('/blocks/Form/i/right.svg')
            right 24px
    
    &__title
        superheader()
        margin-bottom 1vw
        @media $screen-phone
            margin-bottom 24px

    .Action
        body()
        padding 18px 10px
    
    

    &__input,
    &__textarea
        // Strip all default input/textarea styles
        appearance none
        -webkit-appearance none
        -moz-appearance none
        border none
        outline none
        background none
        padding 0
        margin 0
        font inherit
        color inherit
        resize none
        body()
        border 1px solid gray
        padding 1.2vw .8vw
        box-sizing border-box
        width 100%
        text-transform uppercase

        @media $screen-phone
            padding 18px 10px
        

        
        
        // Shake animation for validation errors
        &.Form__shake
            animation shake 0.5s ease-in-out
            border-color red !important

@keyframes shake
    0%, 100%
        transform translateX(0)
    10%
        transform translateX(-10px)
    20%
        transform translateX(10px)
    30%
        transform translateX(-8px)
    40%
        transform translateX(8px)
    50%
        transform translateX(-6px)
    60%
        transform translateX(6px)
    70%
        transform translateX(-4px)
    80%
        transform translateX(4px)
    90%
        transform translateX(-2px)

    // Success message overlay and blur effect
    &__success-overlay
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        display flex
        align-items center
        justify-content center
        background rgba(255, 255, 255, 0.9)
        backdrop-filter blur(10px)
        z-index 1000
        animation fadeIn 0.3s ease-out
        
    &__success-message
        superheader()
        text-align center
        text-transform uppercase
        animation slideUp 0.5s ease-out
        
    &__blurred
        filter blur(8px)
        transition filter 0.3s ease-out

@keyframes fadeIn
    from
        opacity 0
    to
        opacity 1

@keyframes slideUp
    from
        transform translateY(20px)
        opacity 0
    to
        transform translateY(0)
        opacity 1