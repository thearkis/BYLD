Beast
.decl('link', {
    tag:'a',
    mod: {
        type:'blue'
    },
    noElems:true,
    expand: function () {
        this.domAttr('href', this.param('href'))
        if (this.mod('New')) {
            this.domAttr('target', '_blank')
        }
    }
})


