.Card
    position relative
    width 100%
    height 100%
    background white
    transition transform .3s, border-radius .3s
    overflow hidden
    border-radius 4px
    &_Size
        &_XS
            .thumb
                background top top no-repeat
            .Card
                &__title
                    font-size 2.3vw
                    line-height 2.5vw
                    @media $screen-phone
                        font-size 20px
                        line-height 22px
        &_S
            .thumb
                background top top no-repeat
            .Card
                &__title
                    header()

                    

    &:hover
        cursor pointer
    &__content
        position absolute
        bottom 24px
        right 24px
        left 24px
        color white
        z-index 100
    &__title
        microgramma()
        text-transform uppercase
        max-width 60%
        superheader()
        @media $screen-phone
            header()
    &__text
        body()
        margin-top gap
    &__image
        position relative
        backface-visibility hidden
        transform-style preserve-3d
        transform translate3d(0, 0, 0)
        position relative

        &:before
            content ''
            background-color black
            opacity 0
            position absolute
            top 0
            z-index 1
            bottom 0
            right 0
            left 0
            transition 0.2s opacity ease
            border-radius 4px

        .thumb
            width 100%
            height 100%
            border-radius 4px
            overflow hidden

        &:after
            background -webkit-linear-gradient(bottom, #000a15 0%, rgba(255,255,255,0) 60%)
            position absolute
            content ''
            top 0
            right 0
            left 0
            bottom 0
            border-radius 4px