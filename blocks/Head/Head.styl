

.Head
    position fixed
    right 0
    left 0
    top 0
    z-index 100

    @media $screen-phone
        display none

    &__menu
        position absolute
        top 6vw
        right 30px

    &_Main
        .CaseData
            display none
        .Head
            &__menu
                display none
                right initial
                left 30px
                top 30px

    &__action
        position absolute
        z-index 9999
        right 30px
        top 1.3vw

.CaseData
    font-size 1vw
    margin-right 19vw
    height 3.3vw
    margin-left 30px
    position absolute
    top 1.3vw
    right 0
    left 0
    font-family 'Ticketing'
    border-bottom 1px solid blue
    vertical-align bottom
    z-index 88

    
        
    &__item_two
        left 12vw
        
    &__mid, &__item_two, &__right
        top .5vw
    &__item, &__mid
        position absolute
    &__jp, &__ch
        line-height 1vw
        color red
        display inline
        font-size 2.6vw
        font-weight bold
        font-family Arial
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
        animation text-glow 4s ease-in-out infinite alternate
    &__jp
        letter-spacing -.6vw
        margin-right 20px
        &_Hide
            opacity 0
    &__text
        display inline-block
        color blue
    &__right
        position absolute
        right 0
    &__mid
        right 20vw
        color blue

