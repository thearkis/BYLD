.Intro
    height 100vh
    background-position center
    background-size cover
    background-color #4a4949
    overflow hidden
    position relative
    color white

    &__image
        height 50vw
        background-size cover

    

    .progress-bar
        display none !important

    &_fog
        &_hide
            .Intro__video
                opacity .8

    &_action
        &_hide
            .Intro__footer, .Progress-bar
                display none
                opacity 0


    &__title
        font-size 1.14vw;
        line-height 1.7vw
        font-family 'OCR'
        margin-left 56.7vw
        margin-top 9vw

    &__footer
        display none
        position absolute
        bottom 3vw
        z-index 100
        gridX()
        @media $screen-phone
            bottom 24px

    &__logo
        margin-bottom gap

    &__subtitle
        superheader()
        uppercase()
        microma()
        color white

    &__content
        position absolute
        z-index 100
        top 34%
        gridX()

    &__video
        height 100vh
        
        
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        z-index 50
        opacity 1

    .progress-bar
        position absolute
        bottom 0
        z-index 400
        background red
        height 4px
        transition width 0.5s ease-out