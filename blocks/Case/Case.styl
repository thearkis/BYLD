.Case
    margin 0 30px
    @media $screen-phone
        margin 40px 20px 0 20px
    &__wrap
        background #D9D9D9
        color black
        padding .6vw 1vw
        margin-right 1.7vw
        height 2.9vw
    &__client
        font-size 2vw
    &__hint
        font-size 1vw
    &__client-card
        width 23vw
        margin-top .5vw
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_loaded
            opacity 1
            filter blur(0px)
    &__head
        display flex
        @media $screen-phone
            display block
        & > *
            display inline-block
            vertical-align top
            @media $screen-phone
                display block
    &__client
        display inline-block
        vertical-align top
        position relative
    &__title
        topline()
        font-size 6vw
        line-height 5.2vw
        display inline-block
        vertical-align top
        width 44vw
        @media $screen-phone
            width initial
        color #D9D9D9
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_loaded
            opacity 1
            filter blur(0px)
    &__tail
        position absolute
        right 0
        size = 1.7vw
        height 4.1vw
        background-size size
        width size
        background-position center center
        background-image url('/assets/i/case-arrow.svg')
        background-repeat no-repeat
    &__image
        margin-top 2vw
        size = 100%
        height 33vw
        background-size size
        width size
        background-position center center
        background-repeat no-repeat
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_loaded
            opacity 1
            filter blur(0px)
    &__impact
        &-bottom
            margin-top 4vw
            opacity 0
            filter blur(5px)
            transition opacity 0.8s ease, filter 0.8s ease
            &_loaded
                opacity 1
                filter blur(0px)
        .Header .Header__title
            margin-left 71%
        &-items
            display flex
            gap .1vw
            & > *
                flex 1
            
    &__review
        margin-top 4vw
    &__solution
        margin-top 4vw
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_loaded
            opacity 1
            filter blur(0px)
    &__descr
        margin-top 4vw
        display flex
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_loaded
            opacity 1
            filter blur(0px)
        &-about, &-plus
            position relative
            width 25vw
        &-challenge
            width 50vw
        &-icon
            size = 3.6vw
            height size
            width size
            background url('/assets/i/Plus.svg') center center / size no-repeat
            margin 0 auto
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
    &__description
        hint()
    
    &__action
        margin-top 3vw
        margin-bottom -8vw
    
    &__review
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_loaded
            opacity 1
            filter blur(0px)




.Caseresult
    &__title
        superheader()
    &__text
        caption()
        position relative
        &:after
            content '////'
            color red
            position absolute
            right 0
    &__item
        background-color blue
        padding 1.8vw 2vw
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        & + & 
            margin-top .1vw
        &_loaded
            opacity 1
            filter blur(0px)


.Reviews
    size = 4vw
    height 30vw
    background-size 100%
    width 100%
    background-position center center
    background-repeat no-repeat

    margin-bottom 1vw
    background-image url('/assets/reviews.svg')
    transition opacity 0.8s ease
    &_dimmed
        opacity 0.3