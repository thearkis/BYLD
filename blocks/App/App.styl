

.Clients
    font-size 1.3vw
    line-height 1.5vw
    display flex
    gap .1vw
    &__column
        flex 1
        display flex
        flex-direction column
        gap .1vw
    

.Glyph
    size = 4vw
    height size
    background-size size
    width size
    background-position center center
    background-repeat no-repeat

    margin-bottom 1vw
    &_About
        background-image url('/assets/glyph-about.svg')
    &_Services
        background-image url('/assets/glyph-services.svg')
    &_Clients
        background-image url('/assets/glyph-clients.svg')


.Services
    font-size 1.3vw
    line-height 1.5vw
    display flex
    gap 6vw
    
    &__item
        flex 1
        display flex
        flex-direction column
        &::before
            content ' / '
            display block
            color blue

.Section
    margin 5vw 30px 0 30px
    position relative
    &_Services
        margin-top 16vw
    &__head
        padding-top 1vw
        margin-bottom 1vw
        border-bottom 1px solid #303030

.Misc
    size = 100vw
    height 4vw
    background-size size
    width size
    background-position center center
    background-image url('/assets/misc.svg')
    background-repeat no-repeat



.Action
    position absolute
    right 30px
    top 30px
    border 1px solid red
    padding 1vw 2vw
    color red
    font-size 1vw

.Text
    position relative
    font-size 1.3vw
    line-height 1.5vw
    &__s
        color red
        display inline
    &__item
        max-width 40vw
        position absolute
        &_left 
            left 0
        &_right
            right 0
            top 8vw


.Data
    font-size 1vw
    height 3.3vw
    margin 4vw 30px 0 30px
    position relative
    font-family 'Ticketing'
    border-bottom 1px solid blue
    vertical-align bottom
    &__left, &__mid, &__right
        position absolute
    &__jp, &__ch
        line-height 1vw
        color red
        display inline
        font-size 3vw
        font-weight bold
        font-family Arial
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
        animation text-glow 4s ease-in-out infinite alternate
    &__jp
        letter-spacing -.6vw
        margin-right 20px
        &_Hide
            opacity 0
    &__text
        display inline-block
        color blue
    &__right
        right 0
    &__mid
        right 20vw
        color blue



    
    


.noise::before{
    position: fixed;
    top: 0;
    left: 0;
    width: 200vw;
    height: 200vh;
    content: "";
    /* you can control opacity of noise  */
    opacity: .08;  
    z-index: 1000;
    pointer-events: none;
    background: url(/assets/noise.gif) ;
}



@keyframes pulse {
    0% {opacity:1}
    50% {opacity:0}
    to {opacity:1}
}





.R
    display inline-block
    font-size 5vw
    line-height 5vw
    margin-left 0.5vw
    position absolute
    




table
    border-collapse collapse
    border-spacing 0
    border none

td
    padding 0
    vertical-align baseline

html
    background transparent

.no-scroll
    overflow hidden !important
    height 100%
    width 100%



.App
    overflow-x hidden
    overflow-y auto
    background #000
    color #f0f0f0
    text-transform uppercase
    padding 0
    margin 0
    touch-highlight none
    font-smoothing antialiased
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-family 'Ticketing'
    padding-top 11vw
    position relative
    
    &::before
        content ''
        position fixed
        top 0
        left 0
        right 0
        bottom 50%
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(-60deg)
        transform-origin center top
        will-change transform
        backface-visibility hidden
    
    &::after
        content ''
        position fixed
        top 50%
        left 0
        right 0
        bottom 0
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(60deg)
        transform-origin center bottom
        will-change transform
        backface-visibility hidden

@keyframes text-glow
    0%
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
    100%
        text-shadow 0 0 15px #FF3050, 0 0 30px #FF2040, 0 0 50px #FF1030, 0 0 70px rgba(255, 48, 80, 0.3)

    

// Rolling animation styles
.rolling-animation
    font-family 'JetBrains Mono', monospace
    font-weight 600
    transition color 0.1s ease