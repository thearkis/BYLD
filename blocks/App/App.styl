@keyframes pulse {
    0% {opacity:1}
    50% {opacity:0}
    to {opacity:1}
}

// Fire-like flickering effect - pure dimming like flame intensity
@keyframes fire-flicker {
    0% { 
        opacity: 1;
    }
    5% { 
        opacity: 0.90;
    }
    12% { 
        opacity: 1;
    }
    18% { 
        opacity: 0.82;
    }
    25% { 
        opacity: 0.95;
    }
    32% { 
        opacity: 0.78;
    }
    38% { 
        opacity: 1;
    }
    45% { 
        opacity: 0.85;
    }
    52% { 
        opacity: 0.92;
    }
    58% { 
        opacity: 0.80;
    }
    65% { 
        opacity: 1;
    }
    72% { 
        opacity: 0.87;
    }
    78% { 
        opacity: 0.75;
    }
    85% { 
        opacity: 0.96;
    }
    92% { 
        opacity: 0.83;
    }
    100% { 
        opacity: 1;
    }
}

