.App
    overflow-x hidden
    overflow-y auto
    background #000
    color #f0f0f0
    text-transform uppercase
    padding 0
    margin 0
    touch-highlight none
    font-smoothing antialiased
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-family 'Ticketing'
    position relative
    cursor()

    &_Case
        padding-top 10vw !important
        @media $screen-phone
            padding-top 12vw !important
        
    &::before
        content ''
        position fixed
        top 0
        left 0
        right 0
        bottom 50%
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(-60deg)
        transform-origin center top
        will-change transform
        backface-visibility hidden
    
    &::after
        content ''
        position fixed
        top 50%
        left 0
        right 0
        bottom 0
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(60deg)
        transform-origin center bottom
        will-change transform
        backface-visibility hidden

@keyframes text-glow
    0%
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
    100%
        text-shadow 0 0 15px #FF3050, 0 0 30px #FF2040, 0 0 50px #FF1030, 0 0 70px rgba(255, 48, 80, 0.3)

@keyframes text-glow-light
    0%
        text-shadow 0 0 10px #FF2040, 0 0 20px rgba(255, 32, 64, 0.6)
    100%
        text-shadow 0 0 16px #FF3050, 0 0 32px rgba(255, 48, 80, 0.9)

@keyframes symbols-float
    0%
        transform translate(-50%, -50%) rotate(0deg) scale(1)
        filter blur(0px)
    25%
        transform translate(-50%, -60%) rotate(5deg) scale(1.1)
        filter blur(1px)
    50%
        transform translate(-50%, -40%) rotate(-3deg) scale(0.9)
        filter blur(2px)
    75%
        transform translate(-50%, -55%) rotate(8deg) scale(1.05)
        filter blur(1px)
    100%
        transform translate(-50%, -50%) rotate(0deg) scale(1)
        filter blur(0px)

    


    





.Case
    &__review
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
    &_loaded
        opacity 1
        filter blur(0px)
    
        
            







    





            




        
        

.Clients
    font-size 1.3vw
    line-height 1.5vw
    display flex
    gap .1vw
    &__column
        flex 1
        display flex
        flex-direction column
        gap .1vw


.Section
    margin 5vw 30px 0 30px
    position relative
    &_Services
        margin-top 21vw
    

.Misc
    size = 100vw
    height 4vw
    background-size size
    width size
    background-position center center
    background-image url('/assets/misc.svg')
    background-repeat no-repeat





.Text
    position relative
    font-size 1.6vw
    line-height 1.8vw
    &__s
        color red
        display inline
    &__item
        max-width 40vw
        position absolute
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_left 
            left 0
        &_right
            right 0
            top 8vw
        &_loaded
            opacity 1
            filter blur(0px)


.Data
    font-size 1vw
    height 3.3vw
    margin 4vw 30px 0 30px
    position relative
    font-family 'Ticketing'
    border-bottom 1px solid blue
    vertical-align bottom
    &__left, &__mid, &__right
        position absolute
    &__jp, &__ch
        line-height 1vw
        color red
        display inline
        font-size 3vw
        font-weight bold
        font-family Arial
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
        animation text-glow 4s ease-in-out infinite alternate
    &__jp
        letter-spacing -.6vw
        margin-right 20px
        &_Hide
            opacity 0
    &__text
        display inline-block
        color blue
    &__right
        right 0
    &__mid
        right 20vw
        color blue



