.App
    overflow-x hidden
    overflow-y auto
    background #000
    color #f0f0f0
    text-transform uppercase
    padding 0
    margin 0
    touch-highlight none
    font-smoothing antialiased
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-family 'Ticketing'
    position relative
    cursor()

    &_Case
        padding-top 10vw !important
        @media $screen-phone
            padding-top 12vw !important
        
    &::before
        content ''
        position fixed
        top 0
        left 0
        right 0
        bottom 50%
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(-60deg)
        transform-origin center top
        will-change transform
        backface-visibility hidden
    
    &::after
        content ''
        position fixed
        top 50%
        left 0
        right 0
        bottom 0
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(60deg)
        transform-origin center bottom
        will-change transform
        backface-visibility hidden

@keyframes text-glow
    0%
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
    100%
        text-shadow 0 0 15px #FF3050, 0 0 30px #FF2040, 0 0 50px #FF1030, 0 0 70px rgba(255, 48, 80, 0.3)

@keyframes text-glow-light
    0%
        text-shadow 0 0 10px #FF2040, 0 0 20px rgba(255, 32, 64, 0.6)
    100%
        text-shadow 0 0 16px #FF3050, 0 0 32px rgba(255, 48, 80, 0.9)

@keyframes symbols-float
    0%
        transform translate(-50%, -50%) rotate(0deg) scale(1)
        filter blur(0px)
    25%
        transform translate(-50%, -60%) rotate(5deg) scale(1.1)
        filter blur(1px)
    50%
        transform translate(-50%, -40%) rotate(-3deg) scale(0.9)
        filter blur(2px)
    75%
        transform translate(-50%, -55%) rotate(8deg) scale(1.05)
        filter blur(1px)
    100%
        transform translate(-50%, -50%) rotate(0deg) scale(1)
        filter blur(0px)

    


    

.Form
    background #fff
    width 40vw
    height 100vh
    position fixed
    top 0
    right 0
    z-index 11000
    visibility hidden
    transform translateX(100%)
    transition transform 0.3s ease
    box-shadow -2px 0 20px rgba(0, 0, 0, 0.1)
    
    @media $screen-phone
        width 100vw
    
    .form-content
        height 100%
        display flex
        flex-direction column
        overflow hidden
    
    .form-header
        padding 24px
        border-bottom 1px solid #eee
        display flex
        justify-content space-between
        align-items center
        background #fafafa
        
        h3
            margin 0
            font-size 18px
            font-weight 600
            color #333
        
        .form-close
            background none
            border none
            font-size 24px
            cursor pointer
            color #666
            padding 0
            width 32px
            height 32px
            display flex
            align-items center
            justify-content center
            border-radius 4px
            transition all 0.2s ease
            
            &:hover
                background #eee
                color #333
    
    .form-body
        flex 1
        padding 24px
        overflow-y auto
        
        p
            margin 0 0 16px 0
            color #666
            line-height 1.6



.Case
    &__review
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
    &_loaded
        opacity 1
        filter blur(0px)
        

.Clients
    body()
    display flex
    @media $screen-phone
        display block
    gap .1vw
    &__column
        & + &
            margin-top 1px
        .link
            display block
        @media $screen-phone
            .link + .link
                margin-top 1px
        flex 1
        display flex
        @media $screen-phone
            display block
        flex-direction column
        gap .1vw




.Misc
    size = 100vw
    height 4vw
    background-size size
    width size
    background-position center center
    background-image url('/assets/misc.svg')
    background-repeat no-repeat



.GR
    background-image linear-gradient(180deg, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0))
    content ''
    opacity 1
    position fixed
    z-index 999
    top 0
    left 0
    width 120%
    height 40%

.Text
    position relative
    header()
    &__s
        color red
        display inline
    &__item
        @media $screen-phone
            position relative
            max-width 100%
        max-width 40vw
        position absolute
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_left 
            left 0
        &_right
            right 0
            top 8vw
        &_loaded
            opacity 1
            filter blur(0px)


