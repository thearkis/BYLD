.PathOfAwakening
    margin-top 20vw
    position relative
    padding 0 4vw
    color white
    &__word
        display inline
        
        &_one, &_two, &_three, &_four
            opacity 0
            transform translateY(20px)
            // No transitions - instant response to scroll
            
        &_one_visible, &_two_visible, &_three_visible, &_four_visible
            opacity 1
            transform translateY(0px)
            
        &_one_blurred, &_two_blurred, &_three_blurred, &_four_blurred
            filter blur(8px)
            opacity 0.6
    &__p
        & + &
            margin-top 2vw
    &__headline
        font-family "times-new-roman"
        color #B54A0D
        position relative
        
        text-align center
        z-index 99
        
        font-size 8vw
        line-height 8.2vw
        letter-spacing -.1vw
        
        // Initial state: blurred and transparent
        filter blur(25px)
        opacity 0
        
        // Smooth transitions for blur, opacity, and transform
        transition filter 1.5s ease-out, opacity 1.5s ease-out, transform 1.5s ease-out
        
        // Fire-like flickering effect
        animation fire-flicker 3s infinite ease-in-out
        
        // Loaded state: clear and visible with continued flicker
        &_loaded
            filter blur(0px)
            opacity 1
            animation fire-flicker 3s infinite ease-in-out
    
    &__line
        &_Top
            font-size 12.5vw
            letter-spacing .1vw
