    position absolute
    




table
    border-collapse collapse
    border-spacing 0
    border none

td
    padding 0
    vertical-align baseline

html
    background transparent

.no-scroll
    overflow hidden !important
    height 100%
    width 100%



.App
    overflow-x hidden
    overflow-y auto
    background #000
    color #f0f0f0
    text-transform uppercase
    padding 0
    margin 0
    touch-highlight none
    font-smoothing antialiased
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-family 'Ticketing'
    padding-top 11vw
    position relative
    cursor url('/assets/cursor.svg'), auto
    
    &::before
        content ''
        position fixed
        top 0
        left 0
        right 0
        bottom 50%
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(-60deg)
        transform-origin center top
        will-change transform
        backface-visibility hidden
    
    &::after
        content ''
        position fixed
        top 50%
        left 0
        right 0
        bottom 0
        z-index -1
        background-image linear-gradient(rgba(0, 255, 255, 0.25) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 255, 0.25) 1px, transparent 1px)
        background-size 100px 100px
        transform perspective(400px) rotateX(60deg)
        transform-origin center bottom
        will-change transform
        backface-visibility hidden

@keyframes text-glow
    0%
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
    100%
        text-shadow 0 0 15px #FF3050, 0 0 30px #FF2040, 0 0 50px #FF1030, 0 0 70px rgba(255, 48, 80, 0.3)

@keyframes symbols-float
    0%
        transform translate(-50%, -50%) rotate(0deg) scale(1)
        filter blur(0px)
    25%
        transform translate(-50%, -60%) rotate(5deg) scale(1.1)
        filter blur(1px)
    50%
        transform translate(-50%, -40%) rotate(-3deg) scale(0.9)
        filter blur(2px)
    75%
        transform translate(-50%, -55%) rotate(8deg) scale(1.05)
        filter blur(1px)
    100%
        transform translate(-50%, -50%) rotate(0deg) scale(1)
        filter blur(0px)

    


    
