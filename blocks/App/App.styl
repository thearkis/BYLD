.Services
    font-size 1.6vw
    line-height 1.8vw
    display flex
    gap 6vw
    counter-reset services-counter
    
    &__item
        flex 1
        display flex
        flex-direction column
        counter-increment services-counter
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &::before
            content counter(services-counter)
            display block
            color blue
            font-size 4vw
            line-height 4vw
        &_loaded
            opacity 1
            filter blur(0px)

.Section
    margin 5vw 30px 0 30px
    position relative
    &_Services
        margin-top 21vw
    &__head
        padding-top 1vw
        margin-bottom 1vw
        border-bottom 1px solid #303030

.Misc
    size = 100vw
    height 4vw
    background-size size
    width size
    background-position center center
    background-image url('/assets/misc.svg')
    background-repeat no-repeat



.Action
    position fixed
    z-index 9999
    right 30px
    top 30px
    border 1px solid red
    padding 1vw 2vw
    color red
    font-size 1vw
    transition all 0.3s ease
    backdrop-filter blur(10px)
    background rgba(255, 255, 255, 0.01)
    white-space nowrap
    min-width max-content
    box-sizing border-box
    &:hover
        background red
        color black
        transform scale(1.02)
        border-color red
        backdrop-filter blur(15px)

.Text
    position relative
    font-size 1.6vw
    line-height 1.8vw
    &__s
        color red
        display inline
    &__item
        max-width 40vw
        position absolute
        opacity 0
        filter blur(5px)
        transition opacity 0.8s ease, filter 0.8s ease
        &_left 
            left 0
        &_right
            right 0
            top 8vw
        &_loaded
            opacity 1
            filter blur(0px)


.Data
    font-size 1vw
    height 3.3vw
    margin 4vw 30px 0 30px
    position relative
    font-family 'Ticketing'
    border-bottom 1px solid blue
    vertical-align bottom
    &__left, &__mid, &__right
        position absolute
    &__jp, &__ch
        line-height 1vw
        color red
        display inline
        font-size 3vw
        font-weight bold
        font-family Arial
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
        animation text-glow 4s ease-in-out infinite alternate
    &__jp
        letter-spacing -.6vw
        margin-right 20px
        &_Hide
            opacity 0
    &__text
        display inline-block
        color blue
    &__right
        right 0
    &__mid
        right 20vw
        color blue



    
    


.noise::before{
    position: fixed;
    top: 0;
    left: 0;
    width: 200vw;
    height: 200vh;
    content: "";
    /* you can control opacity of noise  */
    opacity: .08;  
    z-index: 1000;
    pointer-events: none;
    background: url(/assets/noise.gif) ;
}



