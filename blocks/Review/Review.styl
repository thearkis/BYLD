.Review
    &_size
        &_L
            .Review
                &__text
                    superheader()
                    margin-bottom 2vw
        &_M
            .Review
                &__text
                    body()
                    margin-bottom 2vw
    &__person
        hint()
        color red
        display flex
        line-height 1.2vw
        margin-top -1vw
    &__photo
        margin-right .6vw
        size = 2.1vw
        margin-top .2vw
        background-position center center
        background-repeat no-repeat
        background-size size
        width size
        height size

        @media $screen-phone
            size = 32px
            background-size size
            width size
            height size
            margin-right 8px