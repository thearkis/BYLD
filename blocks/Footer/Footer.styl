.Footer
    position relative
    background blue
    padding 4vw 30px 2vw 30px
    margin-top 10vw
    margin-bottom 0
    &__ark
        position absolute
        right 0
        top 0
        size = 4vw
        height size
        background-size size
        width size
        background-position center center
        background-repeat no-repeat
        background-image url('/assets/ark.svg')
        opacity .5
        &:hover
            opacity 1
            cursor pointer
    &__copy
        border-top 1px solid white
        margin-top 2vw
        padding-top 1vw
        position relative
    &__level
        position relative
        & + &
            margin-top 4vw
    &__items
        display flex
        margin-top 8vw
        gap 0vw
        > *
            flex 1
        .Footer
            &__text
                font-size 5.92vw
                color white
            &__action
                background white
    &__left, &__mid, &__right
        position absolute
    &__jp, &__ch
        line-height 1vw
        color red
        display inline
        font-size 3vw
        font-weight bold
        font-family Arial
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
        animation text-glow 4s ease-in-out infinite alternate
    &__jp
        letter-spacing -.6vw
        margin-right 20px
        &_Hide
            opacity 0
    &__text
        display inline-block
        color white
    &__right
        right 0
    &__mid
        right 20vw
        color blue