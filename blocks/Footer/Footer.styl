.Footer
    position relative
    background blue
    padding 4vw 30px 2vw 30px
    margin-top 10vw
    margin-bottom 0
    &__ark
        position absolute
        right 0
        top 0
        size = 4vw
        height size
        background-size size
        width size
        background-position center center
        background-repeat no-repeat
        background-image url('/assets/ark.svg')
        opacity .5
        &:hover
            opacity 1
            
    &__copy
        border-top 1px solid white
        margin-top 2vw
        padding-top 1vw
        position relative
    &__level
        position relative
        & + &
            margin-top 4vw
    &__items
        display flex
        margin-top 8vw
        gap 0vw
        > *
            flex 1
        .Footer
            &__text
                font-size 5.92vw
                line-height 5vw
                color white
            &__action
                background white
                color blue
                display flex
                align-items center
                justify-content center
                text-align center
                font-size 1.5vw
                transition all 0.2s ease
            
                &:hover
                    background rgba(255, 255, 255, 0.9)
                    transform scale(1.01)
                    backdrop-filter blur(12px)
                
    &__left, &__mid, &__right
        position absolute
    &__left
        left 0
        width 50%
    &__jp, &__ch
        line-height 1vw
        color red
        display inline
        font-size 3vw
        font-weight bold
        font-family Arial
        text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)
        animation text-glow 4s ease-in-out infinite alternate
    &__jp
        letter-spacing -.6vw
        margin-right 20px
    &__ch
        position absolute
        right 0
        &_Hide
            opacity 0
    &__text
        display inline-block
        color white
        &_R
            position absolute
            right 0
    &__right
        right 0
        width 50%
    &__mid
        
        color blue
        