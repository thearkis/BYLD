

.Process__outline
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-position bottom center
    background-repeat repeat-x
    background-size 100%
    opacity var(--bg-opacity, 0)
    transition opacity 0.4s ease
    z-index -1


.Process
    margin-top 0 
    position relative   
    body()

    &__scheme
        display none
        @media $screen-phone
            display block
            margin 8vw 0
            margin-left -4vw
            &_step1
                size = 100%
                width size
                height 52vw
                background url('/blocks/Process/i/process-01-mobile.svg') center center / size no-repeat
            &_step2
                size = 100%
                width size
                height 55vw
                background url('/blocks/Process/i/process-02-mobile.svg') center center / size no-repeat
            &_step3
                size = 100%
                width size
                height 76vw
                background url('/blocks/Process/i/process-03-mobile.svg') center center / size no-repeat
            &_step4
                size = 100%
                width size
                height 76vw
                background url('/blocks/Process/i/process-04-mobile.svg') center center / size no-repeat
            &_step5
                size = 100%
                width size
                height 80vw
                background url('/blocks/Process/i/process-05-mobile.svg') center center / size no-repeat
                

    @media $screen-phone
        &__step
            
            margin 460px 0 !important
            padding 24px 20px !important
            
        &__step_01,
        &__step_02,
        &__step_03,
        &__step_04,
        &__step_05
            height auto !important
        &__outline, &__outline::before
            opacity 1 !important
            background-image none !important
            height auto !important
            border 1px solid red
            border-radius 16px

            

    &__misc-line_blue
        color blue
    &__num
        color red
        superheader()
        position absolute
        right 3vw
        top 3vw

        @media $screen-phone
            top 20px
            left 20px
    &__misc
        position absolute
        bottom 3.5vw
        background black
        padding-right 1vw
        @media $screen-phone
            bottom initial
            position relative
            margin-top 24px
            background none
    &__text
        width 40%
        opacity .4
        transition opacity 0.6s ease
        @media $screen-phone
            width 100%
    &__title
        color red
        superheader()
        margin-bottom 2vw
        transition text-shadow 0.6s ease
        @media $screen-phone
            margin-top 80px
            margin-bottom 24px
        &_glow
            text-shadow 0 0 10px #FF2040, 0 0 25px #FF1030, 0 0 40px #FF0020, 0 0 60px rgba(255, 32, 64, 0.2)

        
    &__step
        position relative
        padding 3vw
        margin 0
        transition opacity 0.6s ease
        @media $screen-phone
            backdrop-filter blur(10px)
            z-index 9999
        
        &_faded 
            opacity 0.3
            &::after
                content ''
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                background linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.4) 50%, rgba(0, 0, 0, 0.6) 100%)
                pointer-events none
                z-index 10
                transition opacity 0.6s ease
        
        // Create pseudo-element for background image with opacity control
        &::before, .Process__outline::before
            content ''
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            background-position bottom center
            background-repeat repeat-x
            background-size 100%
            opacity var(--bg-opacity, 0)
            transition opacity 0.4s ease
            z-index -1


        &_01
            .Process__outline::before
                background-image url('/assets/process_1.svg')
                
            height 32vw
        &_02
            .Process__outline::before
                background-image url('/assets/process_2.svg')
            height 33vw
        &_03
            .Process__outline::before
                background-image url('/assets/process_3.svg')
            height 33vw
        &_04
            .Process__outline::before
                background-image url('/assets/process_4.svg')
            height 33vw
        &_05
            .Process__outline::before
                background-image url('/assets/process_5.svg')
            height 31.8vw
            .Process
                &__num
                    margin-top .7vw
                    @media $screen-phone
                        top 20px
                        left 20px
                &__title
                    margin-top .7vw
                    @media $screen-phone
                        margin-top 80px
                        margin-bottom 24px